<%= render 'shared/page_title',title: "showin all users"%>

<div align="center">
  <%=will_paginate%>
</div>

<div align="center">
  <% @users.each do |user|%>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user),user_path(user)%></li>
          <li class="chef-title"><%= link_to user.name.capitalize,user_path(user)%></li>
          <li><small><%= pluralize(user.diaries.count,"Diary") if user.diaries%></small></li>

          <% if logged_in? && current_user.adminstrator? && !user.adminstrator?%>
            <li><%= link_to "Delete",user_path(user),method: :delete,data: {confirm: "Are you sure ?"}%></li>
          <%end%>
        </div>
      </div>
    </ul>
  <%end%>
</div>

<div align="center">
  <%=will_paginate%>
</div>